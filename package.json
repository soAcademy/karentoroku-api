{
  "name": "karentoroku-api",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@prisma/client": "^4.12.0",
    "@yarnpkg/pnpify": "^4.0.0-rc.40",
    "add": "^2.0.6",
    "axios": "^1.3.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "firebase-admin": "^11.5.0",
    "fp-ts": "^2.13.1",
    "io-ts": "^2.2.20",
    "io-ts-extra": "^0.11.6",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "yarn": "^1.22.19"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.3",
    "jest": "^29.5.0",
    "pre-commit": "^1.2.2",
    "prisma": "^4.11.0",
    "rimraf": "^4.4.1",
    "ts-jest": "^29.0.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.2"
  },
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register src/main.ts",
    "start": "ts-node -r tsconfig-paths/register src/main",
    "build": "rimraf dist && tsc",
    "ts-check": "tsc --project tsconfig.json",
    "add-build": "git add dist",
    "serve": "node dist/main.js",
    "prisma:merge": "cat prisma/schema/**.prisma > prisma/schema.prisma",
    "prisma:format": "npx prisma format",
    "prisma:migrate": "npx prisma migrate dev --name init --schema prisma/schema.prisma",
    "prisma:generate": "yarn pnpify prisma generate --schema=prisma/schema.prisma",
    "test": "jest --verbose",
    "test:karentoroku": "jest -- src/karentoroku"
  },
  "pre-commit": [
    "ts-check",
    "build",
    "add-build"
  ]
}
